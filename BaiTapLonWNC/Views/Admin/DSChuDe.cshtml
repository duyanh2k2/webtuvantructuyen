@section Scripts {
    <script>
        $(document).ready(function () {
            loadchude();
        });
        //thêm ueser
        $('#btn_add').click(function () {
            var chude = $('#chude').val().trim();
            if (chude.length == 0) {
                alert("vui lòng nhập đủ dữ liệu");
                return;
            }
            var macd = $('#macd').val();
            if (macd.length == 0) {
                $.ajax({
                    url: '/Admin/addCD',
                    type: 'post',
                    data: {
                        chude: chude,
                    },
                    success: function (data) {
                        if (data.code == 200) {
                            alert(data.msg)
                            loadchude();
                            $('#chude').val('')
                        } else {
                            alert(data.msg)
                        }
                    }
                });
            }
            else {
                $.ajax({
                    url: '/Admin/UpdateChuDe',
                    type: 'post',
                    data: {
                        id:macd ,
                        chude: chude,
                    },
                    success: function (data) {
                        if (data.code == 200) {
                            alert(data.msg)
                            loadchude()
                        } else {
                            alert(data.msg)
                        }
                    }
                });

            }

        });

        //xem thông tin user
       
        // hiện chủ đề cần sửa
        $(document).on('click', ".btn__sua", function () {
            var usid = $(this).data('id');
            $.ajax({
                url: '/Admin/chude1',
                Type: 'get',
                data: {
                    id: usid,
                },
                success: function (data) {
                    if (data.code == 200) {
                        $('#macd').val(usid);
                        $('#chude').val(data.chude.tenChuDe);
                        $('#exampleModal').modal('show');

                    }
                }
            });
        });
        //xóa user
        $(document).on('click', ".btn__xoa", function () {
            var usid = $(this).data('id');
            if (confirm("Bạn thật sự muốn xóa user này?")) {
                $.ajax({
                    url: '/Admin/xoacd',
                    type: 'post',
                    data: { id: usid },
                    success: function (data) {
                        if (data.code == 200) {
                            loadchude();
                            alert(data.msg)
                        }
                        else {
                            alert(data.msg)
                        }
                    }
                });
            }

        });
        function loadchude() {
            $.ajax({
                url: '/Admin/ChuDe',
                Type: 'get',
                success: function (data) {
                    //console.log(data)
                    if (data.code == 200) {
                        $('#ds__chude').empty();
                        $.each(data.dscd, function (k, v) {
                            let tr = '<tr>';
                            tr += '<td>' + k + '</td>';
                            tr += '<td>' + v.tenChuDe + '</td>';
                            tr += '<td class="fl">';
                            tr += '<button class="btn__sua btn btn-secondary" data-id=' + v.maChuDe + '>Sửa</button>'
                            tr += '<button class="btn__xoa btn btn-danger" data-id=' + v.maChuDe + '>Xóa</button>'
                            tr += '</td>';
                            tr += '</tr>';
                            $('#ds__chude').append(tr);
                        });
                    }
                }
            });
        }
        $('#add').click(function () {
            $('#macd').val('');
            $('#chude').val('')
        });
    </script>
}